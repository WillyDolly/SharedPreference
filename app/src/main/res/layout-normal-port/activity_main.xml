<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.popland.pop.sharedpreference.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/EDTtaikhoan"
        android:hint="taikhoan"/>
    <EditText android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/EDTmatkhau"
        android:hint="password"
        android:layout_below="@+id/EDTtaikhoan"
        android:inputType="textPassword"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkboxRemember"
        android:layout_below="@+id/EDTmatkhau"/>
    <Button android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/BTNdangnhap"
        android:text="dang nhap"
        android:layout_below="@+id/checkboxRemember"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:layout_below="@+id/EDTmatkhau"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false" />

</RelativeLayout>
